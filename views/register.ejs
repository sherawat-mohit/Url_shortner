<div class="row mt-4">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-2">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include('./partials/messages.ejs') %>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">
              <h5 class="mb-1">Name</h5>
            </label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
          </div>
          <div class="form-group mt-2">
            <label for="email">
              <h5 class="mb-1">Email</h5>
            </label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group mt-2">
            <label for="password">
              <h5 class="mb-1">Password</h5>
            </label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </div>
          <div class="form-group  mt-2">
            <label for="password2">
              <h5 class="mb-1">Confirm Password</h5>
            </label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-2 fw-bold">
            Register
          </button>
        </form>
        <p class="d-flex justify-content-center mt-2">Have An Account?&nbsp;&nbsp;&nbsp;<a href="/users/login"><button
              class="btn btn-light btn-sm  fw-bold">Login</button></a></p>
    </div>
  </div>
</div>