<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <form class="container" action="/users/login" method="POST">
          <div class="row form-group  mb-3">
            <label for="email"><h5 class="mb-1">Email</h5></label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="row form-group mb-3">
            <label for="password"><h5 class="mb-1">Password</h5></label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block fw-bold">Login</button>
        </form>
        <p class="d-flex justify-content-center">
         No Account? &nbsp;&nbsp;&nbsp;<a href="/users/register"><button class="btn btn-light btn-sm fw-bold">Register</button></a>
        </p>
      </div>
    </div>
  </div>